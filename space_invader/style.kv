#:kivy 1.10.1
#:import C kivy.utils.get_color_from_hex

<Label>:
    font_name: "Future"
    color: C('#000000')

<Button>:
    background_color: (1, 1, 1, 0)

<Background>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            texture: self.tx_space

<SubMenu@BoxLayout>:
    orientation: "vertical"
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: 0.9, 0.9
    padding: sp(8), sp(6)
    
    canvas:
        BorderImage:
            pos: self.pos
            size: self.size
            source: 'img/metalPanel_redCorner.png'
            border: (12, 12, 30, 12)

<MenuHeader@Label>:
    size_hint: 1, None
    height: 24
    text_size: self.size
    font_size: sp(24)
    halign: 'left'
    # color: C('#0099ff')
    color: C('#ffffff')

