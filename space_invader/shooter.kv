#:kivy 1.10.1

<SpaceShip>:

    canvas:
        PushMatrix
        Rotate:
            angle: self.orientation
            origin: self.center
        Rectangle:
            pos: (self.center_x - dp(self.propulsion_texture.width * 0.2), self.y - dp(self.propulsion_texture.height * 0.5))
            size: dp(0.66 * self.propulsion_texture.width), dp(0.5 * self.propulsion_texture.height)
            texture: self.propulsion_texture
        PopMatrix


<PlayerShip>:
    size_hint: None, None
    size: dp(50), dp(38)

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "atlas://img/space_invader/playerShip1_blue"

<EnemyShip>:
    size_hint: None, None
    size: dp(52), dp(42)

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "atlas://img/space_invader/enemyRed3"
        
<Debris>:
    size_hint: None, None
    height: dp(10)
    width: self.height

    canvas:
        Color:
            rgb: (self.red, self.green, 0.)
        Rectangle:
            pos: self.pos
            size: self.size

<Bullet>:
    size_hint: None, None
    size: dp(4), dp(18)

<PlayerBullet>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "atlas://img/space_invader/laserGreen10"

<EnemyBullet>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: 180
            origin: self.center
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "atlas://img/space_invader/laserRed16"
    canvas.after:
        PopMatrix

<ShooterGame>:
    Menu:
        id: menu
        size: root.size
        
    Credits:
        size: root.size
    
    Map:
        size: root.size

    SpaceGame:
        menu: menu
        size: root.size

<SpaceGame>:
    name: "main"

    container: container
    background: background
    lives: lives

    FloatLayout:
        Background:
            id: background

            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    texture: self.tx_space

        ActorsContainer:
            id: container

        BoxLayout:
            orientation: "vertical"
            size_hint: 1., None
            height: dp(35)
            pos: dp(5), root.height - self.height - dp(5)

            Label:
                text: "Score: {}".format(str(container.player.score))
                text_size: self.size
                height: dp(20)

            BoxLayout:
                id: lives
                orientation: "horizontal"
                size_hint: 1., None
                height: dp(15)
                padding: (dp(5), dp(2))
                pos: self.parent.pos

        IconButton:
            size_hint: None, None
            size: dp(30), dp(30)
            pos: root.width - self.width - dp(5), root.height - self.height - dp(5)
            source: "atlas://img/space_invader/lineLight31"
            opacity: 0.5
            on_release: root.manager.current = "menu"

        Image:
            size_hint: None, None
            size: dp(60), dp(60)
            pos: dp(10), dp(10)
            source: "atlas://img/space_invader/lineLight07"
            opacity: 0.5

        IconButton:
            size_hint: None, None
            size: dp(50), dp(50)
            pos: root.width - self.width - dp(5), dp(5)
            source: "atlas://img/space_invader/lineLight47"
            opacity: 0.5
            on_release: container.player.gun.shoot() if container.player.alive else None
