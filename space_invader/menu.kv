#:kivy 1.10.1
#:import C kivy.utils.get_color_from_hex

<MenuButton@Button>:
    font_size: sp(36)

<Menu>:
    name: "menu"
    but_launch: but_launch

    FloatLayout:

        Background:
            id: background

        BoxLayout:
            orientation: "vertical"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.9, 0.9

            canvas:
                BorderImage:
                    pos: self.pos
                    size: self.size
                    source: 'img/metalPanel.png'

            Label:
                text: "Carole VS aliens"
                font_size: sp(48)
                color: C('#E86A17')

            MenuButton:
                id: but_launch
                text: "Play"
                on_release: root.manager.current = "main"

            # MenuButton:
            #     id: but_options
            #     text: "Options"
            #     # on_release: root.manager.current = "options"

            MenuButton:
                id: but_credits
                text: "Credits"
                on_release: root.manager.current = "credits"
                
            MenuButton:
                id: but_quit
                text: "Quit"
                on_release: app.stop()
